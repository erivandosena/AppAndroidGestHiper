<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.erivando.gestanteautocuidadopa.fragment.SobreAppFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".activity.MainActivity"
        tools:showIn="@layout/app_bar_main">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.9"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_background_800x1280" />

        <ScrollView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp">

            <include layout="@layout/content_sobre_app" />

        </ScrollView>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/bt_ant_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:background="@null"
        android:contentDescription="@null"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_bt_anterior_48x48" />

    <ImageButton
        android:id="@+id/bt_prox_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|right"
        android:background="@null"
        android:baselineAlignBottom="false"
        android:contentDescription="@null"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_bt_proximo_48x48" />

</FrameLayout>
